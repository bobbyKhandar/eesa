{
  "compilerOptions": {
    "target": "es2020",                      
    "module": "commonjs",                    
    "rootDir": "./src",                      
    "outDir": "./dist", 
    "moduleResolution": "node",                     
    "strict": true,                          
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}